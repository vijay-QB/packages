{
  "compilerOptions": {
    "target": "ES2020",             // âœ… Good: Modern JS
    "module": "commonjs",           // âœ… Required for Node compatibility
    "declaration": true,            // âœ… Needed for type support in consumers
    "declarationMap": true,         // ðŸ†• Helpful for debugging
    "outDir": "dist",               // âœ… Good: All builds go into dist
    "rootDir": "src",               // âœ… Good: Keeps file structure clean
    "strict": true,                 // âœ… Enforces type safety
    "esModuleInterop": true,        // âœ… Allows default imports from CJS
    "skipLibCheck": true,           // âœ… Skips node_modules type checks
    "composite": true,     
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,          // âœ… Required if using project references
    "moduleResolution": "node",     // ðŸ†• Ensures Node-style resolution
    "resolveJsonModule": true,      // ðŸ†• In case you import JSON files
    "forceConsistentCasingInFileNames": true // ðŸ†• Avoids cross-platform casing issues
  },
  "include": ["src"]
}
